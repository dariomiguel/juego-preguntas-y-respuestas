Options -Indexes

<FilesMatch ".*\.(log|ini|htaccess)$">
    Deny from all
</FilesMatch>

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /pregUnlam

    # Permitir acceso directo a archivos en vista/
    RewriteRule ^vista/ - [L,NC]


    RewriteRule ^imagenes/ - [L,NC]


    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    RewriteRule ^([^/]+)/([^/]+)/?(.*)?$ index.php?controller=$1&method=$2&$3 [L,QSA]
    RewriteRule ^([^/]+)/([^/]+)/?$ index.php?controller=$1&method=$2 [L,QSA]
    RewriteRule ^([^/]+)/?$ index.php?controller=$1 [L,QSA]
</IfModule>